<h1 id=eatheader>Burger Time!</h1>

<div class= "container text-center">
    <div class= "row">
        <img src= "./public/burger.png">
    </div>
    <div class = "row">
        <div class = "col-6-md">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                <li>{{this.id}}. {{this.burger}}
                    <button data-burgerid="{{this.id}}" class="eatBurger">Eat 'da Burger!</button>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class = "col-6-md">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=false}}
                <li>
                    {{this.id}}. {{this.burger}}
                </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <form>
            <div class="form-group">
                <input type="text" class = "form-control" id="burgerOrder">
            </div>
            <button type="submit" id = "orderBtn class="btn btn-primary">Order your burger!</button>
        </form>
    </div>
    <div>
        <p> Write the name of a burger in the textbox, then click the button to order your burger! </p>
    </div>
</div>